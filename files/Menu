local function render()
term.setBackgroundColour(colours.blue)
term.clear()
term.setBackgroundColour(colours.orange)
term.setTextColour(colours.white)
term.setCursorPos(1,1)
term.clearLine()
center(1,"Dawn")
term.setBackgroundColour(colours.green)
term.setTextColour(colours.white)
center(3," Load Disk ")
center(5," Info ")
center(7," Shutdown ")
end
 
while true do render()
  local evt,button,x,y = os.pullEvent("mouse_click")
  if y == 1 then term.clear()
  if not fs.exists("/.achievement/menu") then
  term.setBackgroundColour(colours.grey)
  center(1,"                              ")
  term.setTextColour(colours.yellow)
  center(2,"       Achievement Get!       ")
  term.setTextColour(colours.white)
  center(3,"   Found the menu easter egg  ")
  center(4,"                              ")
  term.setBackgroundColour(colours.green)
  centerSlow(10,"You found an easter egg!")
  local f = fs.open("/.achievement/menu","w")
  f.write("")
  f.close()
  sleep(1.8)
  render()
  else if fs.exists("/.achievement/menu") then
  term.clear()
  centerSlow(8,"You found the easter egg!")
  sleep(0.25)
  center(9,"(again)")
  sleep(1.8)
  render()
  end
  end
  elseif y == 3 then shell.run("/Dawn/Disk")
  elseif y == 5 then
 term.setBackgroundColour(colours.green)
 term.setTextColour(colours.white)
 term.clear()
 center(2,"Dawn - Credits")
 center(4,"All programming [Menu, startup, achievements,")
 center(5,"Disk Loader]")
 center(6,"Mr_Iron2")
 center(8,"Original concept")
 center(9,"Gonow32")
 center(16,"You will be returned to the menu in a few")
 center(17,"moments...")
 sleep(6)
 render()
  elseif y == 7 then term.setBackgroundColour(colours.white)
  term.setTextColour(colours.black)
  term.clear()
  center(8,"Shutting Down...")
  sleep(0.6)
  term.setBackgroundColour(colours.lightGrey)
  term.clear()
  sleep(0.15)
  term.setBackgroundColour(colours.grey)
  term.clear()
  sleep(0.15)
  os.shutdown()
  else end
  end
