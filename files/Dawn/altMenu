local function render()
term.setBackgroundColour(colours.white)
term.clear()
term.setBackgroundColour(colours.black)
term.setTextColour(colours.white)
term.setCursorPos(1,1)
term.clearLine()
center(1,"Dawn")
term.setBackgroundColour(colours.white)
term.setTextColour(colours.black)
center(3,"[1] Load Disk ")
center(5,"[2] Info ")
center(7,"[3] Shutdown ")
end
 
while true do render()
  local event,key = os.pullEvent("key")
  if key == keys.one then shell.run("/Dawn/altDisk")
  elseif key == keys.two then term.setBackgroundColour(colours.white)
 term.setTextColour(colours.black)
 term.clear()
 center(2,"Dawn - Credits")
 center(4,"All programming [Menu, startup, achievements,")
 center(5,"Disk Loader]")
 center(6,"Mr_Iron2")
 center(8,"Original concept")
 center(9,"Gonow32")
 center(11,"Note: Some effects are removed in monochrome")
 center(12,"mode for speed reasons")
 center(16,"You will be returned to the menu in a few")
 center(17,"moments...")
 sleep(7.25)
 render()
  elseif key == keys.three then os.shutdown()
  else end
  end
